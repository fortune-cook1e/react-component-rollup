{
  "compilerOptions": {
    "rootDir": "src",
    "module": "ESNext",
    "allowJs": true,
    "strict": true,
    "target": "ES2017",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "declarationDir": "lib",
    "declaration": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/global.d.ts",
  ]
}